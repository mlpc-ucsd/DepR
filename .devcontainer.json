{
    "name": "depr",
    "image": "depr:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.isort",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags"
            ]
        }
    },
    "runArgs": [
        "--gpus",
        "all",
        "--shm-size",
        "1024G"
    ]
}